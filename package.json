{
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.2",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "prettier-plugin-jinja-template": "^1.4.0",
    "tailwindcss": "^3.4.3"
  },
  "scripts": {
    "watch:tailwind": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch",
    "watch:html": "nodemon --watch src -e '*' --exec 'python src/build.py --output dist'",
    "flask-dev": "python -m flask --app src/dev-server.py --debug run --port 5000",
    "dev": "concurrently \"yarn watch:html\" \"yarn watch:tailwind\" \"yarn flask-dev\"",
    "build": "./build.sh"
  }
}
